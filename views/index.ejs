<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] h-[60vh] bg-zinc-100 px-10 py-5 rounded-[30px]">
    <h1 class="text-3xl text-center capitalize tracking-tighter font-semibold text-zinc-700 leading-none">Welcome to pinterest</h1>
    <form action="/login" method="post">
      <input class=" border-2 rounded-md block w-full mt-2 px-3 py-2" type="text" name="username" placeholder="username">
      <input class=" rounded-md border-2 block w-full mt-2 px-3 py-2"  type="password" name="password" placeholder="password">
      <a class="mt-2 inline-block " href="#">Forgot password ? </a>
      <input class="  w-full mt-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account</a>
    </form>
  </div>
</div>
